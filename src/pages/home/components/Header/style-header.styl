.header
  display: flex
  line-height: .86rem
  background : #00bcd4
  color :#fff
  .header-left
    width : .64rem
    float : left
    .backward-arrow
      font-size : .4rem
      text-align :center
  .header-input
    flex : 1
    margin-left :.2rem
    input
      width :100%
      height :.62rem
      border-radius :.1rem
      padding-left :.17rem
      color :#666
  .header-right
    min-width : 1.04rem
    float : right
    text-align :center
    color :#fff
    padding-left : .1rem
    .dropdown-arrow
      font-size :.15rem
      margin-left : .04rem